{
  "name": "electron-react-mcp",
  "version": "1.0.0",
  "description": "Electron client for React MCP Demo",
  "main": "main.js",
  "scripts": {
    "start": "electron . --remote-debugging-port=9223",
    "dev:react": "cd react-ui && npm start",
    "dev:electron": "electron . --remote-debugging-port=9223",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:all": "electron-builder --mac --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.example.reactmcp",
    "productName": "ReAct MCP 客户端",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "node-backend/**/*",
      "node_modules/**/*",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node-backend/node_modules/**/test/**",
      "!node-backend/node_modules/**/tests/**"
    ],
    "asarUnpack": [
      "node-backend/**"
    ],
    "extraResources": [
      {
        "from": "react-ui/public",
        "to": "react-ui/build",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "example",
      "repo": "electron-react-mcp"
    }
  },
  "author": "ReAct MCP Team",
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^2.0.0",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "mammoth": "^1.6.0",
    "playwright": "^1.57.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12"
  }
}
