{
  "name": "electron-react-mcp",
  "version": "1.0.0",
  "description": "Electron client for React MCP Demo",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev:react": "cd react-ui && npm start",
    "dev:electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:all": "electron-builder --mac --win",
    "build:all": "npm run build:backend && npm run build:electron",
    "build:backend": "cd ../node-mcp-backend && npm install",
    "build:electron": "node scripts/build-electron.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.example.reactmcp",
    "productName": "ReAct MCP 客户端",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node-backend/**/*"
    ],
    "extraResources": [
      {
        "from": "react-ui/public",
        "to": "react-ui/build",
        "filter": ["**/*"]
      },
      {
        "from": "node-backend",
        "to": "app.asar.unpacked/node-backend",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "example",
      "repo": "electron-react-mcp"
    }
  },
  "author": "ReAct MCP Team",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12"
  }
}